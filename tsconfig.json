{
  "include": ["src/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
